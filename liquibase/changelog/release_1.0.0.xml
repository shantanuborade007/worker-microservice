<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="yourname">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="user"/>
            </not>
        </preConditions>
        <createTable tableName="user">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="email" type="varchar(255)"/>
            <column name="password" type="varchar(255)"/>
            <column name="role" type="varchar(255)"/>
            <column name="tenet_id" type="varchar(255)"/>
            <column name="client_id" type="varchar(255)"/>
            <column name="audience" type="varchar(255)"/>
            <column name="app_id" type="varchar(255)"/>
            <column name="jobs" type="text[]"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="yourname">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="job"/>
            </not>
        </preConditions>
        <createTable tableName="job">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="img_url" type="varchar(255)"/>
            <column name="user_id" type="uuid"/>
            <column name="status" type="varchar(255)"/>
            <column name="tenet_id" type="varchar(255)"/>
            <column name="client_id" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="3" author="yourname">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="blob"/>
            </not>
        </preConditions>
        <createTable tableName="blob">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="encoding" type="varchar(255)"/>
            <column name="md5" type="varchar(255)"/>
            <column name="content" type="text"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
